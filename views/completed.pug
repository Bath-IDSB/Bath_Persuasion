extends ui_layout

block content

  .sixteen.wide.column 
    br
    .ui.center.aligned.icon.header Completion Results for the Eat-Snap-Love Study
      i.users.icon(id='logo')
      .content 
      |Total number of partifipants: #{users.length}
    - var finished=0 
    table.ui.celled.padded.table
      thead
        tr
          th.single.line Prolific-ID
          th Start Time
          th Redir Time
          th Group
          th Posts
          th Replies
          th P_Flags
          th C_Flags
          th P_Likes
          th C_Likes
          th Messaged
          th Blocked
          th Reported
          th Completed?
      each u in users
        tbody
          tr
            td=u.prolificID
            td=u.createdAt
            td=u.switchedOffAt
            td=u.group
            td=u.numPosts + 1
            td=u.numReplies + 1
            td=u.numPostFlags
            td=u.numCommentFlags
            td=u.numPostLikes
            td=u.numCommentLikes
            td=u.messaged.length
            td=u.blocked.length
            td=u.reported.length
            if(u.completed ==true)
              td(style="color:green;")=u.completed
              - finished++
            else
              td(style="color:red;")=u.completed
      tfoot
          tr
          th(id="total",colspan="14") Total number of participants who completed the study:
          td(style="font-weight: bold;font-size: medium;color:blue")=finished

    br
    br
    br